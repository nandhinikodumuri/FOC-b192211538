//21.Write a program to convert binary to decimal
#include<stdio.h>
#include<math.h>
//function prototype
int convert(long long);

int main()
{
    long long n;
    printf("Enter a Binary number:");
    scanf("%11d",&n);
    printf("%11d in binary =%d in decimal",n,convert(n));
    return 0;
}

//function definition
int convert(long long n)
{
     int dec =0,i=0,rem;
     while (n!=0)
{
    rem=n%10;
    n /=10;
    dec +=rem* pow(2, i);
    ++i;
}
return dec;
}
